{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <div class="col s12">
            <h1>Sales Report</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <p>Total Customers: {{ report.getTotalCustomers }} </p>
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <p>Total Salesman: {{ report.getTotalSalesman }} </p>
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <p>Average Salesman Salary: {{ report.getAverageSalesmanSalary }} </p>
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <p>Most Expensive Sale ID: {{ report.getMostExpensiveSaleId }} </p>
        </div>
    </div>
    <div class="row">
        <div class="col s4">
            <p>Worst Salesman ID: {{ report.getWorstSalesmanName }} </p>
        </div>
    </div>
    <div class="row">
        <a class="waves-effect waves-light btn" href="/">Back</a>
    </div>
{% endblock %}