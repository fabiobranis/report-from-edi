{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <div class="col s12">
            <h1>Welcome</h1>
            <h4>Sales files parser and report</h4>
            <div class="divider"></div>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <label>Select a file to upload</label>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Browse</span>
                    <input type="file" accept=".dat" id="uploadFile" name="report" required/>
                </div>

                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text"
                           placeholder="Upload file"/>
                </div>
            </div>
        </div>
        <div class="row">
            <button class="btn waves-effect waves-light" type="submit" id="uploadButton">Upload
                <i class="material-icons right">send</i>
            </button>
        </div>
        <div class="row">
            <div id="uploadProgress"><span id="uploadPercentage"></span> % uploaded</div>
            <div id="errorMessage"></div>
        </div>
    </div>

{% endblock %}